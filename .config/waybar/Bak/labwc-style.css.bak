/* EMPTY MODULE */

#waybar.empty #custom-media {
}

/* TOOLTIP */
tooltip {
    background: shade(alpha(@borders, 0.7), 1.25);
    border: 1px solid @theme_text_color;
    
}

tooltip label {
    color: @theme_text_color;
	}

/* BUTTON */
button {
    color: @theme_text_color;
    margin: 2px;
	}

button:hover {
    background: @theme_text_color;
    color: shade(alpha(@borders, 0.7), 2);
    }

button.active {
    background: @theme_text_color;
    color: shade(alpha(@borders, 0.7), 2);
	}

/* WORKSPACES BUTTON */
#workspaces button {
	}

#workspaces button:hover {
	background: @theme_text_color;
	color: shade(alpha(@borders, 0.7), 2);
	}

#workspaces button.active {
	background: @theme_text_color;
	color: shade(alpha(@borders, 0.7), 2);
	}

#workspaces button.urgent {
    background: #994444;
}

/* TASKBAR BUTTON */
#taskbar button {
	padding-left: 10px;
	}

#taskbar button:hover {
    background: @theme_text_color;
	color: shade(alpha(@borders, 0.7), 2);
	}

#taskbar button.active {
    background: @theme_text_color;
	color: shade(alpha(@borders, 0.7), 2);
	}

/* MODE */
#mode {
    background-color: #553311;
    border-bottom: 3px solid #ffffff;
}

/* MODULES */
#clock,
#battery,
#cpu,
#memory,
#disk,
#temperature,
#backlight,
#network,
#pulseaudio,
#wireplumber,
#custom-media,
#custom-power,
#custom-wlsunset,
#custom-pacman #tray,
#mode,
#idle_inhibitor,
#scratchpad,
#mpd {
    color: @theme_text_color;
    margin: 2px;
    padding-left: 4px;
    padding-right: 4px;
}

/* If workspaces is the leftmost module, omit left margin */
.modules-left > widget:first-child > #workspaces {
    margin-left: 0;
}

/* If workspaces is the rightmost module, omit right margin */
.modules-right > widget:last-child > #workspaces {
    margin-right: 0;
}

#workspaces {
    margin-left: 180px;
    margin-right: 180px;
}

#taskbar {
    margin-left: 24px;
    margin-right: 24px;
}



#clock {
	color: @theme_text_color;
}

